<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_yellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unsw.infs3634.assignment.splashdroid.MainActivity">

    <ImageView
        android:id="@+id/AppLogo"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/androidstudio"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:textAlignment="center"
        android:id="@+id/splashdroid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="164dp"
        android:text="@string/app_name"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="54pt"
        android:paddingBottom="60dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="369dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashdroid">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/videoButton"
                android:layout_width="328dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gradient_bg"
                android:elevation="12dp"
                android:text="Start learning"
                android:textColor="@android:color/black"
                android:textSize="15pt" />

            <Button
                android:id="@+id/quizButton"
                android:layout_width="328dp"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gradient_bg"
                android:elevation="12dp"
                android:text="Quiz"
                android:textColor="@android:color/black"
                android:textSize="15pt" />


            <ImageButton
                android:id="@+id/infoButton"
                android:layout_width="68dp"
                android:layout_height="88dp"
                android:layout_gravity="right"
                android:background="@android:color/transparent"

                android:elevation="12dp"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="@android:color/background_dark" />

        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>

